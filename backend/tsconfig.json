{
    "compilerOptions": {
        // File Layout
        "rootDir": "./src",
        "outDir": "./dist",

        // Module System â€” CommonJS for Node.js
        "module": "CommonJS",
        "moduleResolution": "node",
        "target": "ES2020",
        "lib": ["ES2020"],
        "types": ["node"],
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,

        // Output
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,

        // Strict Type Checking
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
